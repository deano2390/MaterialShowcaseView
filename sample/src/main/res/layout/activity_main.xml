<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_simple_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Simple Example"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_custom_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Custom Example"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_sequence_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Simple Sequence Example"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_simple_with_custom_view_example"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Simple Example With Custom View"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_reset_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Reset all flags"
        android:layout_margin="10dp"/>

</LinearLayout>
